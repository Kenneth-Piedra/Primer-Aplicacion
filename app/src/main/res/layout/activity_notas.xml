<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/google4"
    tools:context=".notas">


    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mi agenda Personal"
        android:textSize="25sp"
        android:gravity="center"
        android:layout_marginBottom="5dp"
        android:background="@color/cardview_shadow_start_color"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnNotas"
            android:layout_width="132dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="1dp"
            android:backgroundTint="@color/teal_700"
            android:text="Notas"
            android:drawableLeft="@drawable/ic_baseline_notes_24"/>

        <Button
            android:id="@+id/btnActividades"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="@color/teal_700"
            android:text="Actividades"
            android:drawableLeft="@drawable/ic_baseline_person" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="40dp"
            app:srcCompat="@drawable/ic_baseline_library_books_24" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginBottom = "5dp"
        />
    <EditText
        android:id="@+id/txtInicio1"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:backgroundTint="@color/teal_700"
        android:layout_marginBottom = "10dp"
        android:hint="Nota-1 "/>
    <EditText
        android:id="@+id/txtInicio2"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:backgroundTint="@color/teal_700"
        android:layout_marginBottom = "10dp"
        android:hint="Nota-2"/>
    <EditText
        android:id="@+id/txtInicio3"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom = "10dp"
        android:backgroundTint="@color/teal_700"
        android:hint="Nota-3"/>
    <EditText
        android:id="@+id/txtInicio4"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom = "10dp"
        android:backgroundTint="@color/teal_700"
        android:hint="Nota-4"/>
    <EditText
        android:id="@+id/txtInicio5"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom = "10dp"
        android:backgroundTint="@color/teal_700"
        android:hint="Nota-5"/>
    <EditText
        android:id="@+id/txtInicio6"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom = "10dp"
        android:backgroundTint="@color/teal_700"
        android:hint="Nota-6"/>





    <Button
        android:id="@+id/btnAgregarNota"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:backgroundTint="@color/teal_700"
        android:drawableLeft="@drawable/ic_baseline_add_24"
        android:text="Agregar" />




</LinearLayout>
